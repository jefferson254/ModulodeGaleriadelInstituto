<a href="/galeria/administracion/subcategorias" class="btn btn-primary">Volver</a>
<section class="content">

  <section>

    <div class="cardContainer">
      <div class="item--full" style="background:rgb(175, 170, 170)">
        <div class="">
          <div class="title-section-hex-blue">

            <form action="/galeria/edit/{{categoria._id}}" method="post">
              <div class="form-group">
                <input type="text" name="title" placeholder="Title" class="form-control" value="{{categoria.title}}" />
              </div>
              <div class="form-group">
                <textarea name="description" rows="3" class="form-control"
                  placeholder="description">{{categoria.description}}</textarea>
              </div>
              <div class="input-group mb-3">
                <div class="custom-file">
                  <input type="file" name="image" class="custom-file-input" id="inputGroupFile01"
                    accept="image/png, image/jpeg, image/jpg" multiple>
                  <label for="inputGroupFile01" class="custom-file-label"></label>
                </div>
              </div>
              <div class="custom-file-input">

                {{#each categoria.files}}
                <img type="file" name="image" src="{{this}}" width="200px" height="200px" class="custom-file-input"
                  id="inputGroupFile01" accept="image/png, image/jpeg, image/jpg">
                <a href="/galeria/delete/image/{{_id}}" class="btn btn-danger">Eliminar</a>
                {{/each}}
              </div> 
              

              <button class="btn btn-success btn-block">Actualizar</button>
            </form>

            {{!-- //// --}}
            <form action="/galeria/edit/image/{{categoria._id}}" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <input type="text" value="{{categoria.title}}" name="title" class="form-control"
                  placeholder="Titulo de la Imagen">
              </div>
              <div class="form-group">
                <textarea name="description" class="form-control"
                  placeholder="DescripciÃ³n de la Imagen">{{categoria.description}}</textarea>
              </div>
              <div>
              </div>

              <div class="input-group mb-3">
                <div class="custom-file">
                  <input type="file" name="image" class="custom-file-input" id="inputGroupFile01"
                    accept="image/png, image/jpeg, image/jpg" multiple>
                  <label for="inputGroupFile01" class="custom-file-label"></label>
                </div>
              </div>
              <select class="form-control form-control-sm" name="parent_id">
                <option selected value="">Categoria Padre</option>
                {{#each categoriasPadres}}
                <option value="{{_id}}">{{title}}</option>
                {{/each}}
              </select>

              <br>
              <button class="btn btn-success btn-block">
                Subir
              </button>
            </form>



          </div>
        </div>
      </div>
    </div>
  </section>
</section>