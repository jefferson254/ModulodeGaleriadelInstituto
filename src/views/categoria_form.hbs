<a href="/galeria/categoria" class="btn btn-primary">Volver</a>

<!-- Button to trigger modal -->
<button class="btn btn-success btn-primary" data-toggle="modal" data-target="#modalForm">
    Añadir
</button>


<!-- Modal -->
<div class="modal fade" id="modalForm" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Cancelar</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Formulario de Categorías</h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <p class="statusMsg"></p>
                <form action="/galeria/categoria/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Titulo de la Categoría">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control"
                            placeholder="Descripción de la Categoría"></textarea>
                    </div>
                    <div>


                    </div>

                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label"></label>
                        </div>
                    </div>

                    <button class="btn btn-success btn-block">
                        Subir
                    </button>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <!-- Scrollable modal -->
    <div class="modal-dialog modal-dialog-scrollable">

    </div>
    <section>
        <h2 class="title-hexagonal title-section-hex-blue">Tipos de Categorías</h2>

        <div class="cardContainer">

            <div class="item--full" style="background:rgb(250, 250, 250)">
                <div class="">
                    <div class="card-body">



                    </div>
                </div>
            </div>
            <div>
                <table class="table table-hover table-bordered" class="table" class="col-md-10"
                    style="background:rgb(250, 250, 250)">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">N.</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Operacion</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categoria}}
                        <tr>
                            <td>{{@index}}</td>
                            <td>{{title}}</td>
                            <td>{{description}}

                            <td>
                                <a href="/galeria/deletecategoria/{{_id}}" class="btn btn-danger">Eliminar</a>

                                <a href="/galeria/update/{{_id}}" class="btn btn-primary">Editar</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </section>
</section>

