<script src="owl/owl.carousel.min.js"></script>
<script>
    //Carousel-noticias
    var abcElements = document.querySelectorAll('.carousel-indicators-news li');
    for (let i = 0; i < abcElements.length; i++) {
        abcElements[i].addEventListener('click', function () {
            if (abcElements[i].getAttribute("data-slide-to") != 0) {
                abcElements[0].classList.remove("active");
                abcElements[i].classList.add("active");
            }
            if (abcElements[i].getAttribute("data-slide-to") == 0) {
                abcElements[1].classList.remove("active");
                abcElements[i].classList.add("active");
            }

        })
    }
    //Carousel-empresas
    $('.owl-carousel').owlCarousel({
        loop: true,
        margin: 10,
        nav: true,
        dots: false,
        autoplay: true,
        responsive: {
            0: {
                items: 2
            },
            600: {
                items: 4
            },
            1000: {
                items: 8
            }
        }
    })
</script>